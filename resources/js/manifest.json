{
  "name": "inbox-peace",
  "version": "0.1",
 "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["inbox_peace.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["inbox_peace.js", "background.js"],
    "persistent": false
  },
  "manifest_version": 2
}
